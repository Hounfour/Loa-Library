{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*"]
    },
    "types": ["@types/node", "@vue/test-utils", "@types/jest"]
  },
  "include": [
    "packages/**/*",
  ],
  "exclude": ["node_modules"]
}

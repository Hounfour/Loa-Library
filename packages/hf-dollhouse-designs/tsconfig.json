{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "types": ["@types/node", "@vue/test-utils", "@types/jest"]
    },
    "include": [
        "src/**/*.ts", 
        "src/**/*.vue", 
        "tests/**/*.ts", 
        "tests/**/*.vue", 
        "types/*.d.ts"
    ],
    "exclude": ["node_modules"]
}
  